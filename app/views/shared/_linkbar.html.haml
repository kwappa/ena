.common-linkbar
  - if user_signed_in?
    = link_to home_path(current_user.nick), class: 'pure-button' do
      %i.fa.fa-user.fa-lg

  = link_to users_list_path, class: 'pure-button' do
    %i.fa.fa-users.fa-lg

  = link_to user_tags_path, class: 'pure-button' do
    %i.fa.fa-tags.fa-lg

  = link_to teams_path, class: 'pure-button' do
    %i.fa.fa-cubes.fa-lg

  - if user_signed_in?
    = form_tag(destroy_user_session_path, method: :delete) do
      %button.pure-button{ type: 'submit', data: { confirm: 'are you sure to logout?' } }
        %i.fa.fa-sign-out.fa-lg
  - else
    = link_to root_path, class: 'pure-button' do
      %i.fa.fa-sign-in.fa-lg
