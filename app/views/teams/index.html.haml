%div.content.pure-u-1.pure-u-md-3-4
  %div
    %div.posts
      %h1.content-subhead
      %section.post
        %header.post-header
          %h2
            %i.fa.fa-cubes.fa-lg
            Teams
        %div.post-description
          %table.team_list.pure-table
            %thead
              %tr
                %th Name
                %th Description
                %th Histroy
            %tbody
            - @teams.each_with_index do |team, idx|
              %tr{ class: idx.odd? ? 'pure-table-odd' : '' }
                %td
                  = link_to team_path(team) do
                    %i.fa.fa-cube
                    = team.name
                %td= team.render(:description).html_safe
                %td
                  %i{ class: "fa fa-#{team.active? ? 'link' : 'unlink'} fa-lg" }
                  #{team.organized_on} ã€œ #{team.disbanded_on}
                  %br
                  %i.fa.fa-clock-o.fa-lg
                  = team.updated_at
  = paginate @teams
